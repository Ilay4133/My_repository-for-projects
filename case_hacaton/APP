    #page.add(ft.Row([name_of_the_shelter,icon_account],[ft.CrossAxisAlignment.CENTER],[ft.MainAxisAlignment.CENTER]))
    page.add(ft.Column([name_of_the_shelter, user, admin, walk, feed,feed_donation, medicines,med_donation, guardianship, adopt,
                        dog_new, new_dog_name,new_dog_age,new_dog_paroda,new_dog_pol, new_dog_opis, add_new_dog, dog_del, del_dog, add_del_dog, back]))
    Glav_page.del1(e)


ft.app(target=main)
