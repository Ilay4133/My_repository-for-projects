    class Add_anime_page(Admin_Glavpage):
        def obnov_buttons_spisok(self):
            db = sqlite3.connect('Anime_nameses_Data.Data')
            cur = db.cursor()
            cur.execute("SELECT * FROM anime_names")
            print(1)
            print(cur.fetchall())
            for row in cur.fetchall():
                print(row)
                print(1)
                print(e)
                e = e + 1
                print(e)
            watch_button = [ft.ElevatedButton(text="Смотреть", width=300, height=50,on_click=Anime_watch.watch_anime) for _ in range (e)]
            watch_anime_buttons.controls.extend(watch_button)
            db.close()
            page.update()
